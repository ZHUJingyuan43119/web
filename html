					<script>
						$(function(){
							var num = 0;
							var timer = 0;
							$('.btn_toggle span').click(function(){
								var index=$(this).index();
								$(this).addClass('act').siblings().removeClass('act');
								$('.img_carousel ul').animate({'left':-index*700});
							});
							function autoplay(){
								num++;
								if (num==3){
									num=0;
								}
								$('.btn_toggle span').eq(num).addClass('act').siblings().removeClass('act');
								$('.img_carousel ul').animate({'left':-num*700});
								console.log(num);							
							};
							timer = setInterval(autoplay,3000);
							$('.con_1_c').mouseover(function(){
								clearInterval(timer);
								$('.con_1_c').css('cursor','pointer');
							}).mouseout(function(){
								timer = setInterval(autoplay,3000);
							});
						});
					</script>
